<?xml version="1.0" encoding="utf-8"?>

<!-- activity_main.xml -->
<!-- Écran principal : Formulaire de saisie -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5"> <!-- Fond gris clair -->

    <!-- LinearLayout : empile les éléments verticalement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= Titre ================= -->
        <!-- TextView : Titre principal du formulaire -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulaire"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- ================= Nom ================= -->
        <!-- Libellé du champ Nom -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom &amp; Prénom"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <!-- Champ de saisie Nom -->
        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex : BOUSSOUFI Kenza"
            android:inputType="textPersonName"
            android:backgroundTint="#3F51B5"/>

        <!-- ================= Email ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex : user1@gmail.com"
            android:inputType="textEmailAddress"
            android:backgroundTint="#3F51B5"/>

        <!-- ================= Téléphone ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Téléphone"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex : +212065478923"
            android:inputType="phone"
            android:backgroundTint="#3F51B5"/>

        <!-- ================= Adresse ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex : 49, Hay farah ..."
            android:inputType="textPostalAddress"
            android:backgroundTint="#3F51B5"/>

        <!-- ================= Ville ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/ville"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex : Tanger"
            android:inputType="textCapWords"
            android:backgroundTint="#3F51B5"/>

        <!-- ================= Bouton ================= -->
        <!-- Bouton pour envoyer les données -->
        <Button
            android:id="@+id/btnEnvoyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
</ScrollView>
